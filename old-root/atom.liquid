---
permalink: /atom.xml
title: Atom Feed
---
<?xml version="1.0" encoding="utf-8"?>
<?xml-stylesheet type="text/xsl" href="{{ site.baseurl }}/assets/xslt/atom.xslt" ?>
<?xml-stylesheet type="text/css" href="{{ site.baseurl }}/assets/css/atom.css" ?>
<feed xmlns="http://www.w3.org/2005/Atom">
	<id>{{ site.url }}{{ site.baseurl }}/</id>
	<title>{{ site.title }}</title>
	<updated>{{ site.time | date_to_xmlschema }}</updated>

	<subtitle>{{ site.description }}</subtitle>

	{% if site.author %}
		{% assign author = site.data.authors[site.author] %}
		<author>
			{% if author.name %}
				<name>{{ author.name }}</name>
			{% else %}
				<name>{{ site.author }}</name>
			{% endif %}
			{% if author.email %}
				<email>{{ author.email }}</email>
			{% endif %}
			{% if author.uri %}
				<uri>{{ author.uri }}</uri>
			{% endif %}
		</author>
	{% endif %}

	<link href="{{ site.url }}{{ site.baseurl }}{{page.url }}" rel="self" type="application/rss+xml" />
	<link href="{{ site.url }}{{ site.baseurl }}/" rel="alternate" type="text/html" />

	<generator uri="https://jekyllrb.com" version="{{ jekyll.version }}">Jekyll</generator>

	{% for post in site.posts limit: 10 %}
		<entry>
			<id>{{ site.url }}{{ site.baseurl }}{{ post.url }}</id>
			<title>{{ post.title | strip_html | strip_newlines }}</title>
			<link href="{{ site.url }}{{ site.baseurl }}{{ post.url }}" rel="alternate" type="text/html" title="{{ post.title }}" />
			<updated>{{ post.date | date_to_xmlschema }}</updated>

			{% if post.author %}
				{% assign author = site.data.authors[post.author] %}
				<author>
					{% if author.name %}
						<name>{{ author.name }}</name>
					{% else %}
						<name>{{ post.author }}</name>
					{% endif %}
					{% if author.email %}
						<email>{{ author.email }}</email>
					{% endif %}
					{% if author.uri %}
						<uri>{{ author.uri }}</uri>
					{% endif %}
				</author>
			{% endif %}
			<summary>{{ post.teaser }}</summary>
			<content type="html" xml:base="{{ site.url }}{{ site.baseurl }}{{ post.url }}">{{ post.content }}</content>

			{% for category in post.categories %}
				<category term="{{ category }}" />
			{% endfor %}
			{% for tag in post.tags %}
				<category term="{{ tag }}" />
			{% endfor %}

			<published>{{ post.date | date_to_xmlschema }}</published>
		</entry>
	{% endfor %}
</feed>