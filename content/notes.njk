<div class="postlist font-light dark:font-extralight">
    {% for post in collections.notesByTitleAsc %}
        {% if loop.first %}
        <ul>
        {% endif %}
            <li class="bg-gradient-to-r from-white via-gray-100 to-white dark:via-dark-middle dark:from-dark-outer dark:to-dark-outer mb-4 py-2 truncate">
                <a href="{{ post.url }}">{{ post.data.title }}</a>
            </li>
        {% if loop.last %}
        </ul>
        {% endif %}
    {% endfor %}
</div>
