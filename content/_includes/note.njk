layout: base.njk
---
<div class="content post pb-6">
  	<h1>{{ title }}</h1>
	{% if excerpt %}
	<p>{{ excerpt | safe }}</p>
	{% endif %}
	{% if link or website %}
	<h2 id="link">Link</h2><p><a href="{{ website if website else link }}">{{ website if website else link }}</a></p>
	{% endif %}
  	{{ content | safe }}
  	{% include "social.njk" %}
</div>